<!-- Nút mở sidebar -->
<!-- Sidebar -->
<aside class="filter-sidebar hidden" id="filter-sidebar">
  <button class="close-btn" onclick="toggleFilterSidebar()">✕</button>
  <h2>Bộ Lọc</h2>
  <div class="filter-item">
    <label for="category">Danh mục:</label>
    <select id="category">
      <option value="">Tất cả</option>
      {% for collection in collections %}
        <option value="{{ collection.handle }}">{{ collection.title }}</option>
      {% endfor %}
    </select>
  </div>
  
  <div class="filter-item">
    <label for="stock-status">Trạng thái:</label>
    <select id="stock-status">
      <option value="">Tất cả</option>
      <option value="in-stock">Còn hàng</option>
      <option value="out-of-stock">Hết hàng</option>
    </select>
  </div>
  <div class="filter-item">
    <label for="price-range">Khoảng giá:</label>
    <select id="price-range">
      <option value="">Tất cả</option>
      <option value="under-500">Dưới 1.000</option>
      <option value="500-1000">1.000 - 10.000</option>
      <option value="over-1000">Trên 10.000</option>
    </select>
  </div>
  <!-- Nút áp dụng bộ lọc -->
  <button onclick="filterProducts()">Áp dụng Bộ Lọc</button>
</aside>
<link rel="stylesheet" href="{{ 'filter.css' | asset_url }}" />
